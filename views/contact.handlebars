<div class="container-fluid mb-5 contact">
  <h2 class="raleway">Need Legal Assistance?</h2>
</div>

<div class="container-fluid contact">
  <div class="row">
    <div class="col-md-4 info">
        <div class="container">
          <h3>Questions? </h3>
          <h4>Contact Barbara Goodman Law!</h4>
          <ul class="card-list">
            <li class="card-list-item">Email: </li>
            <li>barb@barbgoodmanlaw.com</li><br>
            <li>Phone:</li>
            <li>111-333-4444</li><br>
            <li>Address:</li>
            <li>111 main st, Deerfield IL 60068</li>
          </ul>
        </div>
    </div>
    <div class="col-md-8">
        <div class="container card mb-4">
          <h1 class="card-title">Contact Us</h1>
          <form action="/contact" method="POST" class="card-body">
            <div class="row">
                <div class="form-group col-sm-6"> 
                  <label>First Name</label>
                  <input type="text" name="firstName" class="form-control" required>
                </div>
                <div class="form-group col-sm-6"> 
                  <label>Last Name</label>
                  <input type="text" name="lastName" class="form-control" required>
                </div>
                <div class="form-group col-sm-12"> 
                  <label>Email</label>
                  <input type="email" name="email" class="form-control" required>
                </div>
                <div class="form-group col-sm-12">
                  <label>Message</label>
                  <textarea name="message" cols="30" rows="10" class="form-control" required></textarea>
                </div>
                <div class="form-group col-sm-12">
                  <input type="submit" class="form-control" value="Submit">
              </div>  
            </div>  
          </form>
        </div>
    </div> 
  </div>
</div>









