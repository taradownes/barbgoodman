<div class="container-fluid contact">
  <div class="row">
    <div class="col-md-4 info">
        <div class="container">
          <h3>Questions? </h3>
          <h4>Contact Barbara Goodman!</h4>
          <ul>
            <li>Email: barb@barbgoodmanlaw.com</li>
            <li>Phone: 111-333-4444</li>
            <li>Address: 111 main st, Deerfield IL 60068</li>
          </ul>
        </div>
    </div>
    <div class="col-md-8">
        <div class="container card">
          <h1 class="card-title">Contact Us</h1>
          <form action="" method="" class="card-body">
            <div class="form-group"> 
              <label>First Name</label>
              <input type="text" name="firstName" class="form-control" required>
            </div>
            <div class="form-group"> 
              <label>Last Name</label>
              <input type="text" name="lastName" class="form-control" required>
            </div>
            <div class="form-group"> 
              <label>Email</label>
              <input type="email" name="email" class="form-control" required>
            </div>
            <div class="form-group">
              <label>Message</label>
              <textarea name="message" cols="30" rows="10" class="form-control" required></textarea>
            </div>
            <div class="form-group">
              <input type="submit" class="form-control" value="Submit" required>
            </div>
          </form>
        </div>
    </div> 
  </div>
</div>









